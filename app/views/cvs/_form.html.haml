= simple_form_for(@cv, html: { class: 'form-horizontal'}) do |f|
  = f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category"}
  = f.input :position, label: "Position"
  = f.input :city, label: "City"
  = f.input :description, label: "Description"
  = f.input :url, label: "link to Github account"
  %br/
  = f.button :submit
