= simple_form_for(@cv, html: { class: 'form-horizontal'}) do |f|
  = f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category"}, input_html: { class: "dropdown-toggle"}
  = f.input :position, label: "Position", input_html: { class: "form-control"}
  = f.input :city, label: "City", input_html: { class: "form-control"}
  = f.input :description, label: "Description", input_html: { class: "form-control"}
  = f.input :url, label: "mail/github account", input_html: { class: "form-control"}
  %br/
  = f.button :submit
